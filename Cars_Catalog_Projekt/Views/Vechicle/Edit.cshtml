@{
}

<h2> Edit Vechicle </h2>

<form method="post" asp-controller="Vechicle" asp-action="Edit" asp-route-id="@Model.Id">
    <p>
        <span>ModelId:</span>
        <input type="number" name="modelId" value="@Model.ModelId" />
    </p>

    <p>
        <span>Year:</span>
        <input type="number" name="year" value="@Model.Year" />
    </p>

    <p>
        <span>Color:</span>
        <input type="text" name="color" value="@Model.Color" />
    </p>

    <p>
        <span>Displacement:</span>
        <input type="number" name="displacement" value="@Model.Displacement" />
    </p>

    <p>
        <span>Performance:</span>
        <input type="number" name="performance" value="@Model.Performance" />
    </p>

    <p>
        <span>DriveType:</span>
        <input type="text" name="driveType" value="@Model.DriveType" />
    </p>

    <p>
        <span>Fuel:</span>
        <input type="text" name="fuel" value="@Model.Fuel" />
    </p>

    <p>
        <span>Transmission:</span>
        <input type="text" name="transmission" value="@Model.Transmission" />
    </p>

    <p>
        <span>DoorsCount:</span>
        <input type="number" name="doorsCount" value="@Model.DoorsCount" />
    </p>

    <button type="submit">Edit Vechicle </button>

    <button>
        <a asp-controller="Vechicle" asp-action="Index">Cancel</a>
    </button>
</form>

